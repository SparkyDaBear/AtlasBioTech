{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Search Index Schema",
  "type": "object",
  "required": [
    "genes",
    "drugs", 
    "variants",
    "lastUpdate",
    "stats"
  ],
  "properties": {
    "genes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["symbol", "name"],
        "properties": {
          "symbol": {
            "type": "string",
            "description": "Gene symbol"
          },
          "name": {
            "type": "string",
            "description": "Full gene name"
          },
          "synonyms": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Alternative gene names/symbols"
          },
          "chromosome": {
            "type": "string",
            "description": "Chromosome location"
          },
          "variant_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of variants for this gene"
          }
        }
      }
    },
    "drugs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "fda_status"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Drug name"
          },
          "synonyms": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Alternative drug names"
          },
          "fda_status": {
            "type": "string",
            "enum": ["Approved", "Investigational", "Withdrawn"],
            "description": "FDA approval status"
          },
          "target_class": {
            "type": "string",
            "description": "Drug target classification"
          },
          "mechanism": {
            "type": "string",
            "description": "Mechanism of action"
          },
          "variant_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of variants tested against this drug"
          }
        }
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["gene", "variant_string", "protein_change"],
        "properties": {
          "gene": {
            "type": "string",
            "description": "Gene symbol"
          },
          "variant_string": {
            "type": "string",
            "description": "Short variant notation"
          },
          "protein_change": {
            "type": "string",
            "description": "Protein change notation"
          },
          "consequence": {
            "type": "string",
            "description": "Variant consequence"
          },
          "drugs_tested": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Drugs tested against this variant"
          }
        }
      }
    },
    "lastUpdate": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last index update"
    },
    "stats": {
      "type": "object",
      "required": ["total_genes", "total_drugs", "total_variants"],
      "properties": {
        "total_genes": {
          "type": "integer",
          "minimum": 0
        },
        "total_drugs": {
          "type": "integer", 
          "minimum": 0
        },
        "total_variants": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}